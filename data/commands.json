{
  "commands": [
    {
      "name": "Build Project",
      "options": [
        {
          "type": "list",
          "name": "buildType",
          "message": "Select build configuration:",
          "choices": [
            "development",
            "production",
            "staging"
          ]
        },
        {
          "type": "confirm",
          "name": "minify",
          "message": "Minify the output?",
          "default": false
        }
      ],
      "executeCommands": [
        "npm run build -- --env={{buildType}} {{#if minify}}--minify{{/if}}",
        "echo Build completed for {{buildType}} environment"
      ],
      "executeParallel": false,
      "requireExecutionChoice": true,
      "subcommands": [
        {
          "name": "New Subcommand",
          "execute": "",
          "executeCommands": [
            ""
          ]
        }
      ]
    },
    {
      "name": "Initialize Projects",
      "description": "Description for the new command",
      "executeCommands": [
        ""
      ],
      "executeParallel": false,
      "requireExecutionChoice": false,
      "subcommands": [
        {
          "name": "NextJS",
          "execute": "",
          "executeCommands": [
            "npx create-next-app"
          ],
          "options": []
        },
        {
          "name": "ReactJS",
          "execute": "",
          "executeCommands": [
            "npx create-react-app . --template={{ts}}"
          ],
          "options": [
            {
              "type": "list",
              "name": "ts",
              "message": "Choose your language",
              "default": true,
              "validate": "input => input || 'Version is required'",
              "choices": [
                "JavaScript",
                "TypeScript"
              ]
            }
          ]
        }
      ],
      "options": [
        {
          "type": "list",
          "name": "",
          "message": ""
        }
      ]
    }
  ]
